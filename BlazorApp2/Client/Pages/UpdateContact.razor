@page "/UpdateContact/{id}"

<PageTitle>Update Contact</PageTitle>

<div class="card">


    <div class="card-header"><h3>Update Contact</h3></div>

    <div class="card-body">
        <EditForm Model="contact" OnValidSubmit="Update">
            <DataAnnotationsValidator />
                <div class="form-group">
                <div class="row mt-3">
                    <div class="col-2"><label for="FirstName" class="form-label">First Name:</label></div>
                    <div class="col-10"><InputText class="form-control" id="FirstName" @bind-Value="contact.FirstName"></InputText></div>
                </div>
                <div class="row mt-3">
                    <div class="col-2"><label for="LastName" class="form-label">Last Name:</label></div>
                    <div class="col-10"><InputText class="form-control" id="LastName" @bind-Value="contact.LastName"></InputText></div>
                </div>
                <div class="row mt-3">
                    <div class="col-2"><label for="Email" class="form-label">Email:</label></div>
                    <div class="col-10"><InputText class="form-control" id="Email" @bind-Value="contact.Email"></InputText></div>
                </div>
                <div class="row mt-3">
                    <div class="col-2"><label for="PhoneNumber" class="form-label">Phone Numer:</label></div>
                    <div class="col-10"><InputText class="form-control" id="PhoneNumber" @bind-Value="contact.PhoneNumber"></InputText></div>
                </div>
                <ValidationMessage For="@(() => contact.FirstName)" />
                <ValidationMessage For="@(() => contact.LastName)" />
                <ValidationMessage For="@(() => contact.Email)" />
                <ValidationMessage For="@(() => contact.PhoneNumber)" />
                </div>
            <button type="submit" class="btn btn-success mt-2 float-end">Save</button>
        </EditForm>

        @if (apiResponseData != null && apiResponseData.data != null)
        {

        }
        else
        {
            <p>Failed to insert data @apiResponseData?.errorMessage</p>

        }
    </div>

</div>